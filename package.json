{
	"name": "zip-text-nodes",
	"version": "1.0.0-1",
	"description": "Merge the DOM of 2 elements with the same textContent",
	"keywords": [
		"assign",
		"browser",
		"dom",
		"element",
		"merge",
		"textnode"
	],
	"repository": "fregante/zip-text-nodes",
	"license": "MIT",
	"files": [
		"index.js",
		"index.d.ts"
	],
	"scripts": {
		"build": "tsc",
		"build-test": "browserify -t [ babelify --plugins [ @babel/plugin-transform-react-jsx ] ] test.js > .test.js",
		"prepare": "tsc",
		"test": "npm-run-all --silent prepare build-test --parallel test:*",
		"test:blink": "cat .test.js | tape-run",
		"test:gecko": "if [ $CI ]; then cat .test.js | tape-run --browser firefox; fi",
		"test:lint": "xo",
		"watch": "tsc --watch"
	},
	"xo": {
		"envs": [
			"browser"
		],
		"extensions": [
			"ts"
		],
		"overrides": [
			{
				"files": "**/*.ts",
				"extends": "xo-typescript"
			}
		],
		"rules": {
			"no-unused-vars": [
				"error",
				{
					"varsIgnorePattern": "^React$"
				}
			]
		}
	},
	"devDependencies": {
		"@babel/core": "^7.4.5",
		"@babel/plugin-transform-react-jsx": "^7.3.0",
		"@sindresorhus/tsconfig": "^0.3.0",
		"@typescript-eslint/eslint-plugin": "^1.9.0",
		"@typescript-eslint/parser": "^1.13.0",
		"ava": "^1.4.1",
		"babelify": "^10.0.0",
		"browserify": "^16.2.3",
		"dom-chef": "^3.6.0",
		"eslint-config-xo-typescript": "^0.12.0",
		"npm-run-all": "^4.1.5",
		"tape": "^4.10.1",
		"tape-run": "^6.0.0",
		"typescript": "^3.4.5",
		"xo": "*"
	}
}
